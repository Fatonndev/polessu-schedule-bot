{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist",
        "declarationDir": "./dist",
        "allowJs": true,
        "module": "commonjs",
        "target": "esnext",
        "declaration": true,
        "sourceMap": true,
        "alwaysStrict": true,
        // disabled because some dependencies doesn't have type declarations
        "strict": false,
        "resolveJsonModule": true,
        "removeComments": false,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "dist"]
}
